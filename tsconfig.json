{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "target": "es2019",
    "module": "es2020",
    "moduleResolution": "node16",
    "types": ["node", "jest"],
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./**/__(tests|spec)__/*",
    "node_modules/**/*.ts"
  ]
}
